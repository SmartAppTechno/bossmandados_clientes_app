<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_inicio">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        app:titleTextColor="@color/titulo" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Contenido -->
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppDrawerTheme">
            <fragment
                android:id="@+id/mapa_nuevomandado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.MapFragment" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppDrawerTheme"
            android:gravity="bottom"
            android:paddingBottom="20dp">
            <Button
                android:id="@+id/agregar_punto_mandado"
                android:text="Agregar Lugar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/green3"
                android:textSize="11dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:padding="10dp" />
            <Button
                android:id="@+id/pagar_mandado"
                android:text="Enviar Mandado"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/orange"
                android:textSize="11dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/agregar_punto_mandado"
                android:padding="10dp" />
        </RelativeLayout>
    <!-- Contenido -->
        <include
            layout="@layout/Drawer" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>